<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <!-- App ID - Unique GUID for AppSource -->
  <Id>f402ea85-7778-41f3-8cee-c3465c49ca8d</Id>

  <!-- Version -->
  <Version>1.0.0.0</Version>

  <!-- Provider Name -->
  <ProviderName>OilPriceAPI</ProviderName>

  <!-- Default Locale -->
  <DefaultLocale>en-US</DefaultLocale>

  <!-- Display Name -->
  <DisplayName DefaultValue="Energy Price Comparison"/>

  <!-- Description -->
  <Description DefaultValue="Compare energy commodity prices across units and currencies using OilPriceAPI"/>

  <!-- Icon URLs -->
  <IconUrl DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/assets/icon-64.png"/>

  <!-- Support URL -->
  <SupportUrl DefaultValue="https://www.oilpriceapi.com/tools/excel-energy-comparison"/>

  <!-- App Domains -->
  <AppDomains>
    <AppDomain>https://oilpriceapi.github.io</AppDomain>
    <AppDomain>https://www.oilpriceapi.com</AppDomain>
    <AppDomain>https://api.oilpriceapi.com</AppDomain>
  </AppDomains>

  <!-- Hosts -->
  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <!-- Default Settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/taskpane.html"/>
  </DefaultSettings>

  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Workbook">

        <!-- Ribbon Extension -->
        <DesktopFormFactor>

          <!-- Function File -->
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>

          <!-- Extension Points -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="EnergyPriceGroup">
                <Label resid="EnergyPriceGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>

                <!-- Show Taskpane Button -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://www.oilpriceapi.com/tools/excel-energy-comparison"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://oilpriceapi.github.io/excel-energy-addin/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Energy Price Comparison"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Prices"/>
        <bt:String id="EnergyPriceGroup.Label" DefaultValue="Energy Prices"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Compare energy commodity prices across units and currencies"/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open the Energy Price Comparison panel"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
